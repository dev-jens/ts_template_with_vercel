{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                             
    "rootDir": "./src",                                                     
    "outDir": "./dist",                                   
    "esModuleInterop": true,                                    
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                              
    "strictNullChecks": false, 
                        
    "skipLibCheck": true                                 
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
